<div id="<%= dom_id product %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nombre:</strong>
    <%= product.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Descripcion:</strong>
    <%= product.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Imagenes:</strong>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-4">
      <% product.imgages.each do |imgage| %>
        <div class="my-2 overflow-hidden rounded-lg shadow-lg hover:bg-gray-800 transition-colors">
          <%= image_tag imgage, class: "w-full h-full object-cover mix-blend-screen" %>
        </div>
        <%# <div><%= link_to imgage.filename, imgage </div> %>
      <% end %>
    </div>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Precio:</strong>
    $<%= product.price %>
  </p>

</div>
